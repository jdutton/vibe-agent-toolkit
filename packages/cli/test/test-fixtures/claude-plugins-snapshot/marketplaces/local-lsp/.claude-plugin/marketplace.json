{
  "$schema": "https://anthropic.com/claude-code/marketplace.schema.json",
  "name": "local-lsp",
  "description": "Local LSP server marketplace for custom language servers",
  "owner": {
    "name": "Local",
    "email": "local@example.com"
  },
  "plugins": [
    {
      "name": "marksman-lsp",
      "description": "Markdown language server for enhanced code intelligence",
      "version": "1.0.0",
      "author": {
        "name": "Local",
        "email": "local@example.com"
      },
      "source": "./plugins/marksman-lsp",
      "category": "development",
      "strict": false,
      "lspServers": {
        "marksman": {
          "command": "marksman",
          "args": ["server"],
          "extensionToLanguage": {
            ".md": "markdown",
            ".markdown": "markdown"
          }
        }
      }
    }
  ]
}
