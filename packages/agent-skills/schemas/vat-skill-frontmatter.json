{
  "$ref": "#/definitions/vat-skill-frontmatter",
  "definitions": {
    "vat-skill-frontmatter": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64,
          "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
          "description": "Skill identifier, must match parent directory name"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1024,
          "description": "What the skill does and when to use it"
        },
        "license": {
          "type": "string",
          "description": "License applied to this skill"
        },
        "compatibility": {
          "type": "string",
          "maxLength": 500,
          "description": "Environment requirements (e.g., \"Requires git, docker, jq\")"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string",
              "description": "Semantic version of this skill"
            }
          },
          "required": [
            "version"
          ],
          "additionalProperties": true
        },
        "allowed-tools": {
          "type": "string",
          "description": "Pre-approved tools (experimental)"
        }
      },
      "required": [
        "name",
        "description",
        "metadata"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
