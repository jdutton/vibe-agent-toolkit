{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Guide Document Frontmatter",
  "description": "Frontmatter schema for user guides and tutorials",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Guide title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Brief description of the guide"
    },
    "category": {
      "type": "string",
      "enum": ["tutorial", "guide", "reference", "howto"],
      "description": "Type of guide"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorization"
    },
    "audience": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"],
      "description": "Target audience level"
    }
  },
  "additionalProperties": true
}
